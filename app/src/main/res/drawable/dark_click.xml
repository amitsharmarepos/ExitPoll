<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"><layer-list>

        <!-- SHADOW -->
        <item><shape>
            <solid android:color="@color/white" />

            <corners android:radius="5dp" />
        </shape></item>
        <!-- BUTTON -->
        <item android:bottom="5px"><shape>
            <padding android:bottom="5dp" />
            <stroke android:width="1dp" android:color="@color/white" />
            <gradient android:angle="270" android:endColor="@color/white" android:startColor="@color/white" />

            <corners android:radius="5dp" />

        </shape></item>
    </layer-list></item>
     <item android:state_pressed="true"><layer-list>

         <!-- SHADOW -->
         <item><shape>
             <solid android:color="@color/mstb_gray" />

             <corners android:radius="5dp" />
         </shape></item>
         <!-- BUTTON -->
         <item android:bottom="5px"><shape>
             <padding android:bottom="5dp" />

             <gradient android:angle="270" android:endColor="@color/mstb_gray" android:startColor="@color/mstb_gray" />

             <corners android:radius="5dp" />

         </shape></item>
     </layer-list></item>

</selector>